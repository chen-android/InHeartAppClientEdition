<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_expert_detail"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	tools:context="com.medvision.vruser.activity.consultation.ExpertDetailActivity">

	<ImageView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:srcCompat="@drawable/icon_banner"
		android:id="@+id/imageView"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:scaleType="fitXY"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintTop_toBottomOf="@+id/include2"/>

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="@+id/imageView"
		android:background="@color/transparent_50_gray"
		android:padding="@dimen/middle_space"
		app:layout_constraintLeft_toLeftOf="@+id/imageView"
		app:layout_constraintRight_toRightOf="@+id/imageView"
		android:id="@+id/relativeLayout">

		<TextView
			android:text="146人咨询过"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:drawableLeft="@drawable/icon_expert_ask_times"
			android:textColor="@color/white"
			android:drawablePadding="@dimen/middle_space"

			android:id="@+id/textView5"/>

		<TextView
			android:text="201个好评"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:textColor="@color/white"
			android:drawableLeft="@drawable/icon_high_opinion"
			android:drawablePadding="@dimen/middle_space"
			android:id="@+id/textView6"/>
	</RelativeLayout>

	<TextView
		android:text="徐新"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView7"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="16dp"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:textColor="@color/colorPrimary"/>

	<TextView
		android:text="主任医师"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView8"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toRightOf="@+id/textView7"
		android:layout_marginLeft="16dp"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
		/>

	<TextView
		android:text="心景认证"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView9"
		android:layout_marginEnd="16dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginRight="16dp"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
		/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:srcCompat="@drawable/icon_accreditation"
		android:id="@+id/imageView2"
		app:layout_constraintRight_toLeftOf="@+id/textView9"
		app:layout_constraintBottom_toBottomOf="@+id/textView9"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"/>

	<include
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		layout="@layout/line_break_black"
		app:layout_constraintLeft_toLeftOf="@+id/textView7"
		app:layout_constraintRight_toRightOf="@+id/textView9"
		android:id="@+id/include"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/textView7"/>

	<TextView
		android:text="专家介绍"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView10"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/include"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="16dp"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

	<TextView
		android:text="徐新，主任医师，现任xxxxxxxx测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:id="@+id/textView11"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/textView10"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="16dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginRight="16dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/button"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/textView11"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		android:background="@drawable/icon_expert_detail_unconcern"
		android:textColor="@color/colorPrimary"
		android:textAllCaps="false"/>

	<View
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/button"
		app:layout_constraintBottom_toTopOf="@+id/textView12"
		android:layout_marginBottom="10dp"
		android:background="?android:colorBackground"
		android:id="@+id/view"/>

	<TextView
		android:text="咨询费"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView12"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="10dp"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="16dp"/>

	<TextView
		android:text="￥120"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textView13"
		android:layout_marginStart="8dp"
		app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
		app:layout_constraintLeft_toRightOf="@+id/textView12"
		android:layout_marginLeft="8dp"/>

	<TextView
		android:text="咨询"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:id="@+id/textView14"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view"
		app:layout_constraintBottom_toBottomOf="parent"
		android:paddingLeft="35dp"
		android:paddingRight="35dp"
		android:gravity="center"
		android:background="@color/colorPrimary"
		android:textColor="@color/white"
		android:textAlignment="center"/>

	<include
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		layout="@layout/activity_base_title_bar"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:id="@+id/include2"
		app:layout_constraintRight_toRightOf="parent"
		/>

</android.support.constraint.ConstraintLayout>
