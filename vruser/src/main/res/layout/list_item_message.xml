<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

	<ImageView
		android:id="@+id/list_item_message_type_iv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/middle_space"
		tools:src="@drawable/icon_ask_message_red"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		android:paddingRight="@dimen/large_space">

		<TextView
			android:id="@+id/list_item_message_title_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/middle_text_size"
			tools:text="在线问诊"/>

		<TextView
			android:id="@+id/list_item_message_content_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/middle_space"
			android:ellipsize="end"
			android:maxLines="1"
			tools:text="善良劫匪了"
			/>
	</LinearLayout>

	<TextView
		android:id="@+id/list_item_message_time_tv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/middle_space"
		tools:text="2016-12-12"
		/>

</LinearLayout>