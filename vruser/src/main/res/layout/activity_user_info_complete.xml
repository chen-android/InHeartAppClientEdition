<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/activity_user_info_complete"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.inheart.inheartapp.activity.user.UserInfoCompleteActivity">

	<include layout="@layout/activity_base_title_bar"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/middle_space">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/small_space">

				<TextView
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/user_info_complete_username"/>

				<EditText
					android:id="@+id/user_info_complete_username_et"
					android:layout_width="0dp"
					android:layout_weight="5"
					android:layout_height="match_parent"
					android:background="@android:color/transparent"
					android:padding="@dimen/small_space"
					android:hint="请输入姓名"/>
			</LinearLayout>

			<include layout="@layout/line_break_black"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/small_space">

				<TextView
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/user_info_complete_id"/>

				<EditText
					android:id="@+id/user_info_complete_id_et"
					android:layout_width="0dp"
					android:layout_weight="5"
					android:layout_height="match_parent"
					android:background="@android:color/transparent"
					android:padding="@dimen/small_space"
					android:inputType="numberSigned"
					android:hint="请输入身份证"/>
			</LinearLayout>

			<include layout="@layout/line_break_black"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/small_space">

				<TextView
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/user_info_complete_age"/>

				<EditText
					android:id="@+id/user_info_complete_age_et"
					android:layout_width="0dp"
					android:layout_weight="5"
					android:layout_height="match_parent"
					android:background="@android:color/transparent"
					android:padding="@dimen/small_space"
					android:inputType="numberSigned"
					android:hint="请输入年龄"/>
			</LinearLayout>

			<include layout="@layout/line_break_black"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/small_space">

				<TextView
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/user_info_complete_emergency_contact"/>

				<EditText
					android:id="@+id/user_info_complete_emergency_contact_et"
					android:layout_width="0dp"
					android:layout_weight="5"
					android:layout_height="match_parent"
					android:background="@android:color/transparent"
					android:padding="@dimen/small_space"
					android:inputType="text"
					android:hint="无"/>
			</LinearLayout>

			<include layout="@layout/line_break_black"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/small_space">

				<TextView
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/user_info_complete_emergency_phone"/>

				<EditText
					android:id="@+id/user_info_complete_emergency_phone_et"
					android:layout_width="0dp"
					android:layout_weight="5"
					android:layout_height="match_parent"
					android:background="@android:color/transparent"
					android:padding="@dimen/small_space"
					android:inputType="phone"
					android:hint=""/>
			</LinearLayout>

			<include layout="@layout/line_break_black"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/small_space">

				<TextView
					android:layout_width="0dp"
					android:layout_weight="2"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/user_info_complete_address"/>

				<EditText
					android:id="@+id/user_info_complete_address_et"
					android:layout_width="0dp"
					android:layout_weight="5"
					android:layout_height="match_parent"
					android:background="@android:color/transparent"
					android:padding="@dimen/small_space"
					android:inputType="text"
					android:maxLength="2"
					android:hint="无"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>


</LinearLayout>
