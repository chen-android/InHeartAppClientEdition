<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/activity_setting"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.medvision.vrdoctor.activity.other.SettingActivity"
	android:orientation="vertical">

	<include layout="@layout/activity_base_title_bar"/>

	<RelativeLayout
		android:id="@+id/setting_cache_rl"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/middle_space"
		android:background="@color/white"
		android:layout_marginTop="@dimen/small_space">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/setting_clear_cache"/>

		<TextView
			android:id="@+id/setting_cache_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:drawableRight="@drawable/icon_right_arrow"
			tools:text="23M"
			android:layout_alignParentRight="true"
			android:drawablePadding="@dimen/small_space"
			android:gravity="center_vertical"/>
	</RelativeLayout>

	<include layout="@layout/line_break_black"/>

	<TextView
		android:id="@+id/setting_about_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/middle_space"
		android:text="@string/setting_about"
		android:drawableRight="@drawable/icon_right_arrow"
		android:background="@color/white"/>
</LinearLayout>
