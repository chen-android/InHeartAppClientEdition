<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="horizontal"
	>

	<ImageView
		android:id="@+id/list_item_consultation_iv"
		android:layout_width="100dp"
		tools:src="@drawable/icon_banner"
		android:scaleType="fitXY"
		tools:layout_constraintTop_creator="1"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		tools:layout_constraintLeft_creator="1"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginLeft="10dp"
		android:layout_height="70dp"
		android:contentDescription="@null"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/list_item_consultation_name_tv"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/list_item_consultation_iv"
		android:layout_marginLeft="16dp"
		tools:text="徐柯南"
		android:textSize="18sp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/list_item_consultation_tag_tv"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/list_item_consultation_name_tv"
		app:layout_constraintLeft_toLeftOf="@+id/list_item_consultation_name_tv"
		tools:text="你有一个内容啊就阿里三等奖"
		android:maxLength="8"
		android:ellipsize="end"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/list_item_consultation_date_tv"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginEnd="8dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginRight="8dp"
		tools:text="下午 10：31"/>


</android.support.constraint.ConstraintLayout>