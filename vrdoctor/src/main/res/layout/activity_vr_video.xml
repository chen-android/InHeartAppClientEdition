<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.medvision.vrdoctor.activity.content.VrVideoActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/activity_rlParent"
				android:layout_width="match_parent"
				android:layout_height="220dp">

				<RelativeLayout
					android:id="@+id/activity_rlPlayView"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/activity_rlToolbar"
					android:layout_width="match_parent"
					android:layout_height="44dp"
					android:layout_alignParentBottom="true">

					<include layout="@layout/video_play_tools"/>
				</RelativeLayout>

				<ImageView
					android:id="@+id/activity_imgBack"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:layout_marginLeft="@dimen/middle_space"
					android:layout_marginTop="@dimen/small_space"
					android:src="@drawable/video_back_btn"/>

				<ImageView
					android:id="@+id/activity_imgBuffer"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_centerInParent="true"
					android:src="@drawable/loading_blue_1"
					android:visibility="gone"/>
			</RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="@dimen/middle_space">

				<TextView
					android:id="@+id/vr_video_title_tv"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="@dimen/middle_text_size"
					android:textStyle="bold"
					tools:text="lajsdfljasl辣椒是对方理解啊算了说短发十分你阿訇哈苏欧"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/middle_space">

					<TextView
						android:id="@+id/vr_video_play_times_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="23"
						android:drawableLeft="@drawable/icon_video"
						android:drawablePadding="@dimen/small_space"/>

					<TextView
						android:id="@+id/vr_video_date_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						tools:text="2016-10-29"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/middle_space">

					<TextView
						android:id="@+id/vr_video_name_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="手机打发饿哦亲我也人"
						android:textSize="@dimen/middle_text_size"
						android:textColor="@color/colorPrimary"/>

					<ImageView
						android:id="@+id/vr_video_collect_iv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						tools:src="@drawable/icon_collect"/>
				</RelativeLayout>

				<TextView
					android:id="@+id/vr_video_content_tv"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
