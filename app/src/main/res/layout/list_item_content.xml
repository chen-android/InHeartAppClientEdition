<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

	<ImageView
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:id="@+id/list_item_content_iv"
		android:layout_marginStart="16dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@drawable/ic_launcher"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/list_item_content_title_tv"
		android:layout_marginTop="24dp"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="24dp"
		app:layout_constraintLeft_toRightOf="@+id/list_item_content_iv"
		android:layout_marginLeft="24dp"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		tools:text="垃圾多浪费就爱上了蓝山咖啡"
		android:maxLines="2"
		android:ellipsize="end"/>

	<TextView
		android:text="TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:layout_editor_absoluteY="61dp"
		android:id="@+id/list_item_content_date_tv"
		app:layout_constraintLeft_toLeftOf="@+id/list_item_content_title_tv"/>
</android.support.constraint.ConstraintLayout>