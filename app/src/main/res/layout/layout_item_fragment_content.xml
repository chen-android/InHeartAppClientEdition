<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

	<TextView
		android:id="@+id/content_search_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/middle_space"
		android:background="@drawable/shape_bg_tp_gray_5r"
		android:drawableLeft="@drawable/icon_search"
		android:padding="@dimen/middle_space"
		android:text="@string/content_search"
		android:textColor="@color/white"/>

	<com.bigkoo.convenientbanner.ConvenientBanner
		android:id="@+id/content_cb"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		app:canLoop="true"/>
</RelativeLayout>